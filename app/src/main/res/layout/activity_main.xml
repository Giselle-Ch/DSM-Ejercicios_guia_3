<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texto_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Layouts"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintBottom_toTopOf="@+id/btnFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRelative"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:backgroundTint="#3F51B5"
        android:onClick="onClickRelative"
        android:text="Relative Layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLinear" />

    <Button
        android:id="@+id/btnTable"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#3F51B5"
        android:onClick="onClickTable"
        android:text="Table Layout"
        app:layout_constraintBottom_toTopOf="@+id/btnGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnFrame" />

    <Button
        android:id="@+id/btnLinear"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#3F51B5"
        android:onClick="onClickLinear"
        android:text="Linear Layout"
        app:layout_constraintEnd_toStartOf="@+id/btnGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFrame" />

    <Button
        android:id="@+id/btnFrame"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="46dp"
        android:backgroundTint="#3F51B5"
        android:onClick="onClickFrame"
        android:text="Frame Layout"
        app:layout_constraintEnd_toStartOf="@+id/btnTable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGrid"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="21dp"
        android:backgroundTint="#3F51B5"
        android:onClick="onClickGrid"
        android:text="Grid Layout"
        app:layout_constraintBottom_toTopOf="@+id/btnRelative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnLinear" />

    <TextView
        android:id="@+id/texto_ejercicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="33dp"
        android:text="Ejercicios"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintBottom_toTopOf="@+id/btn_ejercicio_1"
        app:layout_constraintEnd_toEndOf="@+id/btnRelative" />

    <Button
        android:id="@+id/btn_ejercicio_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="19dp"
        android:backgroundTint="#009688"
        android:onClick="onClickEjercicio2"
        android:text="Login - Constraint Layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ejercicio_1" />

    <Button
        android:id="@+id/btn_ejercicio_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="204dp"
        android:backgroundTint="#009688"
        android:onClick="onClickEjercicio1"
        android:text="Login - Relative Layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLinear" />


</androidx.constraintlayout.widget.ConstraintLayout>